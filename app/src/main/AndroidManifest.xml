<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifspsaocarlos.sdm.opencvcamera4">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.NovaActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraBGR"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraRGB"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraCinza"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraCanny"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraCannyGray"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraBlur"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraPreview"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraHSV"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.FaceDetection"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.CameraGL"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.MainActivity"></activity>
        <activity android:name="br.edu.ifspsaocarlos.sdm.opencvcamera4.BlueCanny"></activity>
        <activity android:name=".CannyControl"></activity>
    </application>
    <supports-screens   android:resizeable="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true" />

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="false"/>

</manifest>